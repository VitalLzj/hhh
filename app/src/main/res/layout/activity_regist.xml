<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/app_toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/register_toolbar_left"
            style="@style/back_img" />

        <TextView
            style="@style/page_title"
            android:text="获取验证码" />
    </android.support.v7.widget.Toolbar>

    <View
        style="@style/ccc_1px"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <TextView
            style="@style/register_text"
            android:text="手机号" />

        <TextView
            android:id="@+id/register_phoneNumber"
            style="@style/register_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff">

        <TextView
            style="@style/register_text"
            android:text="验证码" />

        <EditText
            android:id="@+id/register_yzm"
            style="@style/register_text_right"
            android:layout_marginRight="54dp"
            android:hint="请输入验证码" />

        <TextView
            android:id="@+id/register_get"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="获取"
            android:textColor="#222"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/register_get"
            android:background="#e2e2e2" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_next"
        style="@style/bottom_relative"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/bottom_text"
            android:text="下一步" />
    </RelativeLayout>
</LinearLayout>
