<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/app_toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/user_pwd_toolbar_left"
            style="@style/back_img" />

        <TextView
            style="@style/page_title"
            android:text="修改密码" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/margin_left"
        android:background="@drawable/register_item_bg">

        <TextView
            style="@style/register_text"
            android:text="设置密码" />

        <EditText
            android:id="@+id/user_pwd_new"
            style="@style/register_text_right"
            android:hint="请输入新的登录密码"
            android:inputType="textPassword" />

        <View
            style="@style/ccc_1px"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/margin_left"
        android:background="@drawable/register_item_bg">

        <TextView
            style="@style/register_text"
            android:text="确认密码" />

        <EditText
            android:id="@+id/user_Rpwd_new"
            style="@style/register_text_right"
            android:hint="请保证两次输入的密码相同"
            android:inputType="textPassword" />

        <View
            style="@style/ccc_1px"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_pwd_sure"
        style="@style/bottom_relative"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/bottom_text"
            android:text="确认修改" />
    </RelativeLayout>
</LinearLayout>
