<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/app_toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/info_toolbar_left"
            style="@style/back_img" />

        <TextView
            style="@style/page_title"
            android:text="我的信息" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/info_relay1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff">

        <TextView
            style="@style/userInfo_text"
            android:text="头像" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/info_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:riv_border_color="#e2e2e2"
            app:riv_border_width="1px"
            app:riv_oval="true" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout style="@style/relative_fff_44">

        <TextView
            style="@style/userInfo_text"
            android:text="ID" />

        <TextView
            android:id="@+id/info_id"
            style="@style/setting_right_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_relay2"
        style="@style/relative_fff_44">

        <TextView
            style="@style/userInfo_text"
            android:text="用户名" />

        <ImageView
            android:id="@+id/info_JT_1"
            style="@style/userInfo_JT" />

        <TextView
            android:id="@+id/info_name"
            style="@style/setting_right_text"
            android:layout_toLeftOf="@id/info_JT_1" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_relay3"
        style="@style/relative_fff_44">

        <TextView
            style="@style/userInfo_text"
            android:text="性别" />

        <ImageView
            android:id="@+id/info_JT_2"
            style="@style/userInfo_JT" />

        <TextView
            android:id="@+id/info_sex"
            style="@style/setting_right_text"
            android:layout_toLeftOf="@id/info_JT_2" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_relay4"
        style="@style/relative_fff_44">

        <TextView
            style="@style/userInfo_text"
            android:text="密保" />

        <ImageView
            android:id="@+id/info_JT_3"
            style="@style/userInfo_JT" />

        <TextView
            android:id="@+id/info_mb"
            style="@style/setting_right_text"
            android:layout_toLeftOf="@id/info_JT_3"
            android:background="@drawable/default_back"
            android:padding="3dp"
            android:text="去设置"
            android:textColor="#fff"
            android:visibility="gone" />

        <View
            style="@style/e2e2e2_1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_left" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_relay5"
        style="@style/relative_fff_44">

        <TextView
            style="@style/userInfo_text"
            android:text="密码" />

        <ImageView
            android:id="@+id/info_JT_4"
            style="@style/userInfo_JT" />

        <TextView
            android:id="@+id/info_pwd"
            style="@style/setting_right_text"
            android:layout_toLeftOf="@id/info_JT_4"
            android:gravity="center" />

    </RelativeLayout>

    <View style="@style/e2e2e2_1px" />
</LinearLayout>
