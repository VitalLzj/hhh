<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/forum_recycler_img"
            style="@style/card_head_img"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/forum_recycler_user"
            style="@style/card_head_user"
            android:layout_toRightOf="@id/forum_recycler_img"
            android:text="15565709091" />

        <TextView
            android:id="@+id/forum_recycler_lc"
            style="@style/card_head_right"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forum_recycler_forum_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="#eee"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right">

            <TextView
                android:id="@+id/forum_recycler_forum_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="177****8888 发表于 2016-12-20"
                android:textColor="#999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/forum_recycler_forum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forum_recycler_forum_info"
                android:layout_marginTop="2dp"
                android:text="热烈庆祝粉玫瑰上线"
                android:textColor="#666" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/forum_recycler_content"
        style="@style/community_zhiding"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="热烈庆祝粉玫瑰官方论坛正式上线上线"
        android:textColor="#222222" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/forum_recycler_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="06-20"
            android:textColor="#999"
            android:textSize="12sp" />

        <ImageView
            style="@style/community_recycler_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/shequ_ly" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

</LinearLayout>
