<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/sc_recycler_head_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/sc_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sc_recycler_head_img"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/sc_recycler_head_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题"
            android:textColor="#222"
            android:textSize="14sp" />


        <RelativeLayout
            android:id="@+id/sc_recycler_quite"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/sc_recycler_head_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right"
            android:background="@drawable/mysc_back">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/sc_recycler_xx"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_shouchang_1" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/sc_recycler_xx"
                    android:text="取消"
                    android:textColor="#666"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc" />
</LinearLayout>
