<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/app_toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/student_toolbar_left"
            style="@style/back_img" />

        <TextView
            style="@style/page_title"
            android:text="教务管理" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        style="@style/mine_order_linear_fff"
        android:layout_height="85dp">

        <LinearLayout
            android:id="@+id/student_layout1"
            style="@style/mine_order_linear">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/my_index_7" />

            <TextView
                style="@style/mine_order_linear_text"
                android:text="学籍信息" />
        </LinearLayout>

        <View style="@style/e2e2e2_high" />


        <View style="@style/e2e2e2_high" />

        <LinearLayout
            android:id="@+id/student_layout2"
            style="@style/mine_order_linear">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/my_index_12" />

            <TextView
                style="@style/mine_order_linear_text"
                android:text="教学安排" />
        </LinearLayout>

        <View style="@style/e2e2e2_high" />

        <LinearLayout
            android:id="@+id/student_layout3"
            style="@style/mine_order_linear">

            <ImageView
                android:id="@+id/mine_score_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/my_index_2" />

            <TextView
                android:id="@+id/mine_score_text"
                style="@style/mine_order_linear_text"
                android:text="成绩查询" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>