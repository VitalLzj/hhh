<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myForum_recycler_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View style="@style/ccc_1px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/myForum_recycler_title"
            style="@style/myForum_recycler_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#222" />
    </RelativeLayout>

    <View
        style="@style/e2e2e2_1px"
        android:layout_marginLeft="@dimen/margin_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/myForum_Recycler_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/myForum_recycler_img_delete"
                style="@style/myForum_recycler_bottom_img"
                android:layout_marginLeft="@dimen/margin_left"
                android:src="@mipmap/my_wenzhang_2" />

            <TextView
                style="@style/myForum_recycler_bottom_text"
                android:layout_alignBottom="@id/myForum_recycler_img_delete"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/myForum_recycler_img_delete"
                android:text="删除" />
        </RelativeLayout>

        <TextView
            android:id="@+id/myForum_recycler_bottom_text1"
            style="@style/myForum_recycler_bottom_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right"
            android:text=")" />

        <TextView
            android:id="@+id/myForum_recycler_bottom_zan_num"
            style="@style/myForum_recycler_bottom_text"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_text1"
            android:textColor="#02617a" />

        <TextView
            android:id="@+id/myForum_recycler_bottom_text2"
            style="@style/myForum_recycler_bottom_text"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_zan_num"
            android:layout_toStartOf="@id/myForum_recycler_bottom_zan_num"
            android:text="赞(" />

        <ImageView
            android:id="@+id/myForum_recycler_bottom_img1"
            style="@style/myForum_recycler_bottom_img"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_text2"
            android:src="@mipmap/my_wenzhang_4" />

        <TextView
            android:id="@+id/myForum_recycler_bottom_text3"
            style="@style/myForum_recycler_bottom_text"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_img1"
            android:text=")" />

        <TextView
            android:id="@+id/myForum_recycler_bottom_huifu_num"
            style="@style/myForum_recycler_bottom_text"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_text3"
            android:textColor="#02617a" />

        <TextView
            android:id="@+id/myForum_recycler_bottom_text4"
            style="@style/myForum_recycler_bottom_text"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_huifu_num"
            android:text="回复(" />

        <ImageView
            android:id="@+id/myForum_recycler_bottom_img2"
            style="@style/myForum_recycler_bottom_img"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/myForum_recycler_bottom_text4"
            android:src="@mipmap/my_wenzhang_3" />

    </RelativeLayout>

    <View style="@style/ccc_1px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f5f5f5" />
</LinearLayout>
