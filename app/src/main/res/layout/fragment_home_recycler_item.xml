<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_left"
        android:background="@drawable/home_item_back">

        <ImageView
            android:id="@+id/home_recycler_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/home_recycler_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/home_recycler_img"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin_left"
            android:text="2013 21 21"
            android:textColor="#999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/home_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/home_recycler_time"
            android:layout_alignTop="@id/home_recycler_img"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_toLeftOf="@id/home_recycler_time"
            android:layout_toRightOf="@id/home_recycler_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="这是新闻的标题这是新闻的标题这是新闻的标题这是新闻的标题"
            android:textColor="#222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_recycler_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_recycler_img"
            android:layout_marginBottom="@dimen/margin_right"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_toRightOf="@id/home_recycler_img"
            android:ellipsize="end"
            android:textColor="#666"
            android:maxLines="2"
            android:text="这里是新闻内容这里是新闻内容这里是新闻内容这里是新闻内容"
            android:textSize="11sp" />

    </RelativeLayout>

</LinearLayout>
