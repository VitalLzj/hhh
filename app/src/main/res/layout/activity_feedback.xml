<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/app_toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/feedback_toolbar_left"
            style="@style/back_img" />

        <TextView
            style="@style/page_title"
            android:text="意见反馈" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <View style="@style/ccc_1px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#fff">

        <EditText
            android:id="@+id/feedback_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_left"
            android:background="@null"
            android:gravity="top|left"
            android:hint="请把您的意见留下...(最多200字)"
            android:maxEms="200"
            android:textColorHint="#bbb"
            android:textSize="14sp" />
    </RelativeLayout>

    <View style="@style/ccc_1px" />

    <RelativeLayout
        android:id="@+id/feedback_upload"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="20dp"
        android:background="@drawable/appointment_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>
</LinearLayout>
